{
  "extends": ["standard", "plugin:prettier/recommended", "prettier/standard"],
  "plugins": ["html"],
  "env": {
    "browser": true,
    "webextensions": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "trailingComma": "all",
        "printWidth": 100
      }
    ]
  }
}
