{
  "manifest_version": 2,
  "name": "Open GitHub in IDE",
  "author": "Louis-Marie Michelin",
  "homepage_url": "https://github.com/lmichelin/open-github-links-in-ide",
  "version": "1.0.1",
  "description": "Open GitHub files links in your IDE",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://github.com/*"],
      "js": ["inject.js"],
      "css": ["inject.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "16": "icons/vscode16.png",
    "48": "icons/vscode48.png",
    "128": "icons/vscode128.png"
  },
  "web_accessible_resources": ["icons/*.png"]
}
